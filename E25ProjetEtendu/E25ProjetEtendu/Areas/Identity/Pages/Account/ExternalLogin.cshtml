@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "S'enregistrer";
}

<h1>@ViewData["Title"]</h1>
<h2 id="external-login-title">Associez votre compte @Model.ProviderDisplayName.</h2>
<hr />

<p id="external-login-description" class="text-info">
    Vous vous êtes authentifié avec succès via <strong>@Model.ProviderDisplayName</strong>.
    Veuillez entrer une adresse courriel ci-dessous pour ce site, puis cliquez sur le bouton S'enregistrer pour terminer la connexion.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Veuillez entrer votre adresse courriel." />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">S'enregistrer</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
