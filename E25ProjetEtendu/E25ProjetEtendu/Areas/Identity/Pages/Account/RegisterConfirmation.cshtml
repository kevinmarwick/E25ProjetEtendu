@page
@model RegisterConfirmationModel
@{
	ViewData["Title"] = "Confirmation d'inscription";
}

<h1>@ViewData["Title"]</h1>
@{
	if (@Model.DisplayConfirmAccountLink)
	{
		<p>
			Cette application n'a pas encore de service d'envoi de courriels configuré. Consultez <a href="https://aka.ms/aspaccountconf">cette documentation</a> pour apprendre à en configurer un.
			Normalement, vous auriez reçu un courriel : <a id="confirm-link" href="@Model.EmailConfirmationUrl">Cliquez ici pour confirmer votre compte</a>

		</p>
	}
	else
	{
		<p>
			Veuillez vérifier votre courriel pour confirmer votre compte.
		</p>
	}
}

