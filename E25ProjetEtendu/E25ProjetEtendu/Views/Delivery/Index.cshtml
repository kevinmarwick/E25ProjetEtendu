@model E25ProjetEtendu.ViewModels.DeliveryVM

@{
    ViewData["Title"] = "Tableau de livraison";
}

<div class="container mt-4">
    <h2 class="mb-4">Commandes en attente</h2>

    @if (!Model.PendingOrders.Any())
    {
        <div class="alert alert-info">Aucune commande en attente pour le moment.</div>
    }
    else
    {
        foreach (var order in Model.PendingOrders)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Commande #@order.OrderId</h5>
                            <p class="mb-0 text-muted">Client : @order.Buyer.FirstName</p>
                            <p class="mb-0 text-muted">Date : @order.OrderDate.ToString("g")</p>
                        </div>
                        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#orderDetails-@order.OrderId">
                            Détails
                        </button>
                    </div>

                    <div class="collapse mt-3" id="orderDetails-@order.OrderId">
                        <p><strong>Lieu de livraison :</strong> @order.Location</p>
                        <ul class="list-group mb-3">
                            @foreach (var item in order.OrderItems)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @item.Product.Nom
                                    <span class="badge bg-secondary">@item.Quantity</span>
                                </li>
                            }
                        </ul>
                        <p><strong>Total :</strong> @order.TotalPrice.ToString("C")</p>

                        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#acceptModal-@order.OrderId">
                            Accepter cette commande
                        </button>
                    </div>
                </div>
            </div>

            <!-- Modal de confirmation d'acceptation -->
            <div class="modal fade" id="acceptModal-@order.OrderId" tabindex="-1" aria-labelledby="acceptModalLabel-@order.OrderId" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content shadow">
                        <form method="post" asp-controller="Delivery" asp-action="ConfirmDelivery">
                            <input type="hidden" name="orderId" value="@order.OrderId" />
                            <div class="modal-header">
                                <h5 class="modal-title" id="acceptModalLabel-@order.OrderId">Confirmer l'acceptation</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                            </div>
                            <div class="modal-body">
                                <p>Veuillez confirmer l'acceptation de la commande <strong>#@order.OrderId</strong>.</p>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Courriel</label>
                                    <input type="email" name="email" class="form-control" required />
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">Mot de passe</label>
                                    <input type="password" name="password" class="form-control" required />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-success">Confirmer</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }

        <!-- Pagination -->
        <nav>
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.PendingPageCount; i++)
                {
                    <li class="page-item @(i == Model.CurrentPendingPage ? "active" : "")">
                        <a class="page-link" asp-controller="Delivery" asp-action="Index" asp-route-pendingPage="@i" asp-route-historyPage="@Model.CurrentHistoryPage">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
<hr class="my-5" />
<h2 class="mb-4">Commandes en cours</h2>

@if (!Model.InProgressOrders.Any())
{
    <div class="alert alert-warning">Aucune commande en cours pour le moment.</div>
}
else
{
    foreach (var order in Model.InProgressOrders)
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">Commande #@order.OrderId</h5>
                        <p class="mb-0 text-muted">Client : @order.Buyer.FirstName</p>
                        <p class="mb-0 text-muted">Date : @order.OrderDate.ToString("g")</p>
                        <p class="mb-0 text-muted">Livreur : @order.Deliverer?.FullName</p>
                    </div>
                    <button class="btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#inProgressDetails-@order.OrderId">
                        Détails
                    </button>
                </div>

                <div class="collapse mt-3" id="inProgressDetails-@order.OrderId">
                    <p><strong>Lieu de livraison :</strong> @order.Location</p>
                    <ul class="list-group mb-3">
                        @foreach (var item in order.OrderItems)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @item.Product.Nom
                                <span class="badge bg-secondary">@item.Quantity</span>
                            </li>
                        }
                    </ul>
                    <p><strong>Total :</strong> @order.TotalPrice.ToString("C")</p>

                    <!-- Action buttons -->
                    <div class="d-flex gap-2">
                        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancelModal-@order.OrderId">Annuler</button>
                        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#terminateModal-@order.OrderId">Terminer</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cancel Confirmation Modal -->
        <div class="modal fade" id="cancelModal-@order.OrderId" tabindex="-1" aria-labelledby="cancelModalLabel-@order.OrderId" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content shadow">
                    <form method="post" asp-controller="Order" asp-action="CancelAsStation">
                        <input type="hidden" name="orderId" value="@order.OrderId" />
                        <input type="hidden" name="returnUrl" value="@Url.Action("Index", "Delivery")" />
                        <div class="modal-header">
                            <h5 class="modal-title">Confirmation d'annulation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                        </div>
                        <div class="modal-body">
                            Voulez-vous vraiment annuler la commande <strong>#@order.OrderId</strong> ?
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-danger">Oui, annuler</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Non</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Terminate Confirmation Modal -->
        <div class="modal fade" id="terminateModal-@order.OrderId" tabindex="-1" aria-labelledby="terminateModalLabel-@order.OrderId" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content shadow">
                    <form method="post" asp-controller="Order" asp-action="TerminateOrder">
                        <input type="hidden" name="orderId" value="@order.OrderId" />
                        <div class="modal-header">
                            <h5 class="modal-title">Terminer la commande</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                        </div>
                        <div class="modal-body">
                            Êtes-vous sûr de vouloir marquer la commande <strong>#@order.OrderId</strong> comme livrée ?
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success">Oui, terminer</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}
