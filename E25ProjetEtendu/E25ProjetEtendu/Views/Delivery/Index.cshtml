@model E25ProjetEtendu.Models.Order

<h2 class="mb-4">Prochaine commande à livrer</h2>

@if (Model == null)
{
    <div class="alert alert-info">Aucune commande disponible pour le moment.</div>
}
else
{
    <!-- Bouton pour ouvrir le modal -->
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#commandeModal">
        Voir la commande
    </button>

    <!-- Modal Bootstrap -->
    <div class="modal fade" id="commandeModal" tabindex="-1" aria-labelledby="commandeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="commandeModalLabel">Détails de la commande #@Model.OrderId</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <!-- Colonne gauche : détails de la commande -->
                        <div class="col-md-6">
                            <p><strong>Client :</strong> @Model.Buyer?.UserName</p>
                            <p><strong>Adresse de livraison :</strong> @Model.Location</p>
                            <p><strong>Date :</strong> @Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
                            <p><strong>Total :</strong> @Model.TotalPrice.ToString("C")</p>
                        </div>

                        <!-- Colonne droite : produits -->
                        <div class="col-md-6">
                            <h6>Produits :</h6>
                            <ul class="list-group">
                                @foreach (var item in Model.OrderItems)
                                {                                 
                                    <li class="list-group-item d-flex align-items-center">
                                        <img src="/images/@item.Product.Image" alt="@item.Product.Nom" style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;" />
                                        <div class="flex-grow-1">@item.Product.Nom</div>
                                        <span class="badge bg-primary rounded-pill">@item.Quantity</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <a class="btn btn-success" asp-action="ConfirmDelivery" asp-route-orderId="@Model.OrderId">
                        Accepter cette commande
                    </a>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                </div>
            </div>
        </div>
    </div>
}
