@model E25ProjetEtendu.ViewModels.EditCategoryVM

@{
    ViewData["Title"] = "Modifier une catégorie";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="EditCategory" method="post">
    <input type="hidden" asp-for="CategoryId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Nom de la catégorie</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-action="IndexCategories" class="btn btn-secondary">Retour</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
