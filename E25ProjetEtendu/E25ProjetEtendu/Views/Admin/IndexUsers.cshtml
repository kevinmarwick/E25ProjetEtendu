@model List<E25ProjetEtendu.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Utilisateurs";
}

<h2>Utilisateurs</h2>

<table id="usersTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Est livreur?</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@(user.Roles.Contains("Deliverer") ? "oui" : "non")</td>
                <td>
                    <form asp-action="@(user.Roles.Contains("Deliverer") ? "RemoveDelivererRole" : "GiveDelivererRole")"
                          asp-controller="Admin"
                          method="post"
                          class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn @(user.Roles.Contains("Deliverer") ? "btn-danger" : "btn-success") btn-sm">
                            @(user.Roles.Contains("Deliverer") ? "Retirer Livreur" : "Donner rôle Livreur")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#usersTable').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json"
                }
            });
        });
    </script>
}
