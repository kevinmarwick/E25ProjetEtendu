@using E25ProjetEtendu.Enums
@model E25ProjetEtendu.Models.Order

@{
    ViewData["Title"] = "Terminer la commande";
}

<h2>Commande #@Model.OrderId</h2>

<p>Client : @Model.Buyer?.FirstName</p>
<p>Statut actuel : @Model.Status.ToString()</p>

@if (Model.Status == OrderStatus.Delivered)
{
    <form method="post" asp-action="EndOrder" asp-route-orderId="@Model.OrderId">
        <button class="btn btn-success">Confirmer la fin de la commande</button>
    </form>
}
else
{
    <div class="alert alert-warning">La commande n'est pas encore livrée. Vous ne pouvez pas la terminer.</div>
}
