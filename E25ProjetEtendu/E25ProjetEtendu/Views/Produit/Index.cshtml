@model IEnumerable<E25ProjetEtendu.Models.Produit>

@{
    ViewData["Title"] = "Index";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var recherche = ViewBag.Search as string ?? "";
    var tri = ViewBag.Sort as string ?? "";
    var minPrice = ViewBag.MinPrice as decimal?;
    var maxPrice = ViewBag.MaxPrice as decimal?;
    var categories = ViewBag.Categories as IEnumerable<SelectListItem>;
    var selectedCategory = ViewBag.SelectedCategory as int?;
}

<h2 class="mb-4">Produits disponibles</h2>

<!-- üîç Barre de recherche + Dropdown de filtres -->
<form asp-action="Index" method="get" class="row g-3 align-items-center mb-4">
    <div class="col-md-3">
        <input type="text" name="recherche" value="@recherche" maxlength="200" class="form-control" placeholder="Rechercher un produit..." />
    </div>

    <div class="col-md-6">
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Filtres avanc√©s
            </button>
            <div class="dropdown-menu p-3 shadow w-100" style="min-width: 300px;" onclick="event.stopPropagation();">
                <div class="mb-3">
                    <label for="categoryId" class="form-label">Cat√©gorie :</label>
                    <select name="categoryId" id="categoryId" class="form-select form-select-sm">
                        <option value="">-- Toutes --</option>
                        @foreach (var cat in categories)
                        {
                            var isSelected = selectedCategory?.ToString() == cat.Value;
                            <option value="@cat.Value" selected="@(isSelected ? "selected" : null)">@cat.Text</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Prix entre :</label>
                    <div class="input-group input-group-sm">
                        <input type="number" step="0.01" min="0" name="minPrice" class="form-control" placeholder="Min"
                               value="@(minPrice?.ToString("0.##") ?? "")" />
                        <span class="input-group-text">et</span>
                        <input type="number" step="0.01" min="0" name="maxPrice" class="form-control" placeholder="Max"
                               value="@(maxPrice?.ToString("0.##") ?? "")" />
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Trier par :</label>
                    <div class="btn-group w-100" role="group">
                        <input type="radio" class="btn-check" name="tri" value="prix" id="triPrixUp" autocomplete="off" @(tri == "prix" ? "checked" : "") />
                        <label class="btn btn-outline-primary" for="triPrixUp"><i class="fas fa-arrow-up"></i> Prix</label>

                        <input type="radio" class="btn-check" name="tri" value="prix_desc" id="triPrixDown" autocomplete="off" @(tri == "prix_desc" ? "checked" : "") />
                        <label class="btn btn-outline-primary" for="triPrixDown"><i class="fas fa-arrow-down"></i> Prix</label>

                        <input type="radio" class="btn-check" name="tri" value="note" id="triNoteUp" autocomplete="off" @(tri == "note" ? "checked" : "") />
                        <label class="btn btn-outline-secondary" for="triNoteUp"><i class="fas fa-arrow-up"></i> Note</label>

                        <input type="radio" class="btn-check" name="tri" value="note_desc" id="triNoteDown" autocomplete="off" @(tri == "note_desc" ? "checked" : "") />
                        <label class="btn btn-outline-secondary" for="triNoteDown"><i class="fas fa-arrow-down"></i> Note</label>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index", "Produit")" class="btn btn-sm btn-outline-danger">R√©initialiser</a>
                    <button type="submit" class="btn btn-sm btn-primary">Appliquer</button>
                </div>
            </div>
        </div>
    </div>    
</form>

<!--  Cartes des produits -->
<div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm @(item.InventoryQuantity == 0 ? "disabled-product" : "")" style="font-size: 0.85rem;">
                <img src="~/images/@item.Image" class="card-img-top" alt="@item.Nom" style="height: 140px; object-fit: cover;" />
                <div class="card-body p-2">
                    <h6 class="card-title fw-bold">@item.Nom</h6>
                    <p class="mb-1"><strong>Prix :</strong> @item.Prix $</p>
                    <p class="mb-1"><strong>Quantit√© :</strong> @item.InventoryQuantity</p>
                    <td>
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= item.Note)
                            {
                                <span class="text-warning">&#9733;</span>
                            }
                            else
                            {
                                <span class="text-muted">&#9734;</span>
                            }
                        }
                    </td>

                    <a class="btn btn-sm btn-outline-primary w-100 mb-1" asp-controller="Produit" asp-action="Details" asp-route-id="@item.ProduitId">
                        D√©tails
                    </a>

                    <button type="button"
                            class="btn btn-sm btn-primary w-100 add-to-cart @(item.InventoryQuantity == 0 ? "disabled" : "")"
                            data-productid="@item.ProduitId"
                            data-productname="@item.Nom"
                            data-price="@item.Prix"
                            data-image="@item.Image"
                            data-stock="@item.InventoryQuantity"
                    @(item.InventoryQuantity == 0 ? "disabled" : "")>
                        Ajouter
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<!--  Pagination -->
<nav aria-label="Pagination">
    <ul class="pagination justify-content-center mt-4">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-recherche="@recherche" asp-route-tri="@tri">Pr√©c√©dent</a>
            </li>
        }
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-recherche="@recherche" asp-route-tri="@tri">@i</a>
            </li>
        }
        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-recherche="@recherche" asp-route-tri="@tri">Suivant</a>
            </li>
        }
    </ul>
</nav>

<script>
    var isAuthenticated = @User.Identity.IsAuthenticated.ToString().ToLower();
    var currentUserId = "@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value";
</script>

