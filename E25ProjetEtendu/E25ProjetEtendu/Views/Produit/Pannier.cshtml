@using E25ProjetEtendu.ViewModels
@model List<PannierProduitVM>

<h2 class="mb-4">Votre panier</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Votre panier est vide.</div>
}
else
{
    <div class="table-responsive">
        <table class="table align-middle">
            <thead class="table-light">
                <tr>
                    <th>Produit</th>
                    <th>Prix unitaire</th>
                    <th>Quantité</th>
                    <th>Sous-total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row-@item.ProduitId">
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="~/images/@item.Image" alt="@item.Nom" style="width: 80px; height: 80px; object-fit: cover; margin-right: 15px;" />
                                <span>@item.Nom</span>
                            </div>
                        </td>
                        <td>@item.Prix $</td>
                        <td id="qty-@item.ProduitId">@item.Quantite</td>
                        <td id="subtotal-@item.ProduitId">@(@item.Prix * @item.Quantite) $</td>
                        <td>
                            <div class="d-flex">
                                <button type="button" class="btn btn-sm btn-success increase-btn me-1" data-productid="@item.ProduitId">
                                    <i>+</i>
                                </button>
                                <button type="button" class="btn btn-sm btn-warning decrease-btn" data-productid="@item.ProduitId">
                                    <i>-</i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>  
        
        <div class="text-end">
            <h4>Total général : <span id="total" class="text-primary">@Model.Sum(i => i.Prix * i.Quantite) $</span></h4>
            <button type="button" id="clear-cart-btn" class="btn btn-danger btn-lg mt-3">
                Vider le panier
            </button>
            <a href="#" class="btn btn-primary btn-lg mt-3">Passer à la caisse</a>
        </div>

        
    
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Utilisation de 'on' pour bien attacher les événements même sur des éléments dynamiques
    $(document).on('click', '.increase-btn', function () {
        var productId = $(this).data('productid');

        $.post('@Url.Action("AugmenterProduitAuPannier", "Produit")', { productId: productId }, function (data) {
            $('#qty-' + data.productId).text(data.quantity);
            $('#subtotal-' + data.productId).text(data.subtotal + ' $');
            $('#total').text(data.total + ' $');
        });
    });

    $(document).on('click', '.decrease-btn', function () {
        var productId = $(this).data('productid');

        $.post('@Url.Action("RetirerProduitDuPannier", "Produit")', { productId: productId }, function (data) {
            if (data.quantity > 0) {
                $('#qty-' + data.productId).text(data.quantity);
                $('#subtotal-' + data.productId).text(data.subtotal + ' $');
            } else {
                $('#row-' + data.productId).remove();
            }
            $('#total').text(data.total + ' $');
        });
    });
    $(document).on('click', '#clear-cart-btn', function () {
        $.post('@Url.Action("ViderPannier", "Produit")', function (data) {
            if (data.success) {
                // Supprimer toutes les lignes du tableau
                $('tr[id^="row-"]').remove();
                // Remettre le total à 0
                $('#total').text('0 $');
                // Afficher un message ou remplacer le tableau par "panier vide"
                $('.table-responsive').html('<div class="alert alert-info">Votre panier est vide.</div>');
            }
        });
    });

</script>
